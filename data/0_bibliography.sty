% citations
\usepackage[
    backend=biber,
    style=apa,
    sorting=ynt,
    url=false
]{biblatex}
\usepackage{xstring}

\DeclareSortingTemplate{ynt}{
  \sort[direction=descending]{
    \field{sortyear}
    \field{year}
    \literal{9999}
  }
  \sort[direction=ascending]{
    \field{sortname}
    \field{author}
    \field{editor}
    \field{translator}
    \field{sorttitle}
    \field{title}
  }
  \sort{
    \field{sorttitle}
    \field{title}
  }
}

\renewcommand*{\mkbibnamegiven}[1]{%
  \ifitemannotation{highlight}
    {\textbf{#1}}
    {#1}}

\renewcommand*{\mkbibnamefamily}[1]{%
  \ifitemannotation{highlight}
    {\textbf{#1}}
    {#1}}

\newbibmacro{string+doi}[1]{%
  \iffieldundef{doi}{\iffieldundef{url}{#1}{\href{\thefield{url}}{#1}}}{\href{http://dx.doi.org/\thefield{doi}}{#1}}}	
\DeclareFieldFormat*{title}{\usebibmacro{string+doi}{\mkbibemph{#1}}}

% Hide keywords entries
\DeclareSourcemap{
  \maps[datatype=bibtex]{
    \map{
      \step[fieldsource=keywords, match={hide}, final]
      \step[entrynull]
    }
  }
}